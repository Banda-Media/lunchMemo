{
  "name": "lunch-memo",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "dev": "yarn watch:css && next dev",
    "pre-build": "printenv | sort",
    "build": "yarn watch:css && next build",
    "start": "yarn watch:css && next start",
    "export": "yarn watch:css && yarn build && next export",
    "lint": "eslint --fix .",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "watch:css": "postcss styles/tailwind.css -o styles/main.css",
    "test": "tsdx test --passWithNoTests",
    "tsstart": "tsdx watch",
    "tsbuild": "tsdx build",
    "tslint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "out/*",
      "webpack": false,
      "limit": "1 MB"
    }
  ],
  "dependencies": {
    "firebase": "^8.2.1",
    "nookies": "^2.5.0"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "autoprefixer": "^10.1.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "next": "10.0.3",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "size-limit": "^4.9.1",
    "tailwindcss": "^2.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "pages",
    "hooks",
    "styles",
    "services",
    "components"
  ],
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "ARCHIVE"
    ]
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
